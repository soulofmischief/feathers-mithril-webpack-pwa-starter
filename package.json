{
  "name": "feathers-mithril-webpack-pwa-starter",
  "private": true,
  "description": "A scalable, reactive example progressive messaging app integrating FeathersJS, Flow, Mithril, Webpack 4, and Babel.",
  "version": "0.1.0",
  "homepage": "",
  "directories": {
    "lib": "packages/server"
  },
  "engines": {
    "node": "^10.12.0",
    "yarn": ">= 1.0.0"
  },
  "stylelint": {
    "extends": [
      "./config/.stylelintrc.yaml"
    ]
  },
  "scripts": {
    "client:build": "yarn webpack:client:production",
    "client:dev": "yarn webpack:client:dev | yarn webpack:mask",
    "client:dev:verbose": "yarn webpack:client:dev --verbose | yarn webpack:mask",
    "install:flow": "npx flow-typed install",
    "lint:eslint": "eslint packages/. --config config/.eslintrc.yaml",
    "lint:flow": "npx flow status",
    "lint:flow:stop": "npx flow stop",
    "mocha": "mocha packages/server/test --recursive --exit --compilers js:babel-register",
    "server": "NODE_CONFIG_DIR=packages/server/config babel-node packages/server",
    "server:production": "NODE_CONFIG_DIR=packages/server/config node dist/server",
    "server:dev": "NODE_ENV=development NODE_CONFIG_DIR=packages/server/config nodemon packages/server -w packages/server --exec babel-node",
    "server:build": "NODE_ENV=production yarn webpack:server",
    "server:build:full": "NODE_ENV=development yarn webpack:server",
    "test": "yarn run lint:eslint && yarn run lint:flow && yarn run lint:flow:stop && yarn run mocha",
    "upgrade:all": "yarn upgrade; for script in flow; do yarn upgrade:$script; done",
    "upgrade:flow": "npx flow-typed update-cache; npx flow-typed install",
    "webpack:client:dev": "NODE_ENV=development webpack-dev-server --config config/webpack/devserver.babel.js --colors --progress --watch",
    "webpack:client:production": "NODE_ENV=production webpack --config config/webpack/production.babel.js --colors --progress",
    "webpack:mask": "grep -v  \"\\[built\\]\" | grep -v icons-",
    "webpack:server": "NODE_CONFIG_DIR=packages/server/config webpack --config config/webpack/server.babel.js --colors --progress"
  },
  "dependencies": {
    "@soulofmischief/js-utils": "^0.4.4",
    "dotenv-safe": "^8.1.0",
    "yarn": "^1.17.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-do-expressions": "^7.6.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-destructuring": "^7.6.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/register": "^7.6.2",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-import": "^1.12.2",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-macros": "^2.6.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "babel-preset-minify": "^0.5.1",
    "circular-dependency-plugin": "^5.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.0",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^3.2.0",
    "css-module-flow": "^1.0.0",
    "css-modules-flow-types-loader": "^1.3.0",
    "cssnano": "^4.1.10",
    "dotenv-webpack": "^1.7.0",
    "empty": "^0.10.1",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "favicons-webpack-plugin": "^1.0.2",
    "feathers-localstorage": "^5.0.0",
    "flow-bin": "^0.108.0",
    "html-webpack-plugin": "^3.2.0",
    "lerna": "^3.16.4",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "ms.macro": "^2.0.0",
    "node-sass": "^4.12.0",
    "node-sass-import-once": "^1.2.0",
    "nodemon": "soulofmischief/nodemon",
    "offline-plugin": "^5.0.7",
    "postcss-loader": "^3.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "rxjs": "^6.5.3",
    "sass-loader": "^8.0.0",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "style-loader": "^1.0.0",
    "stylelint": "^11.0.0",
    "stylelint-config-css-modules": "^1.5.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-scss": "^3.11.1",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1",
    "webpack-node-externals": "^1.7.2",
    "webpack-pwa-manifest": "^4.0.0",
    "webpack-subresource-integrity": "^1.3.3"
  },
  "workspaces": [
    "packages/*"
  ]
}

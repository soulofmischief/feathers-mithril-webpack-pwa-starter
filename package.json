{
  "name": "feathers-mithril-webpack-pwa-starter",
  "private": true,
  "description": "A scalable, reactive example progressive messaging app integrating FeathersJS, Flow, Mithril, Webpack 4, and Babel.",
  "version": "0.1.0",
  "homepage": "",
  "engines": {
    "node": ">= 10.12.0",
    "yarn": ">= 1.0.0"
  },
  "stylelint": {
    "extends": [
      "./config/.stylelintrc.yaml"
    ]
  },
  "scripts": {
    "client:build": "yarn webpack:client:production",
    "client:dev": "yarn webpack:client:dev | yarn webpack:mask",
    "client:dev:verbose": "yarn webpack:client:dev --verbose | yarn webpack:mask",
    "install:all": "yarn install; for script in flow; do yarn install:$script; done",
    "install:flow": "flow-typed install",
    "lint:eslint": "eslint packages/. --config config/.eslintrc.yaml",
    "lint:flow": "flow status",
    "lint:flow:stop": "flow stop",
    "mocha": "mocha packages/server/test --recursive --exit --compilers js:babel-register",
    "server:dev": "yarn webpack:server:dev",
    "server:build": "yarn webpack:server:production",
    "server:build:debug": "yarn webpack:server:production",
    "test": "yarn run lint:eslint && yarn run lint:flow && yarn run lint:flow:stop && yarn run mocha",
    "upgrade:all": "yarn upgrade; for script in flow; do yarn upgrade:$script; done",
    "upgrade:flow": "flow-typed update-cache; flow-typed install",
    "webpack:client:dev": "webpack-dev-server --mode development --config config/webpack/devserver.babel.js --colors --progress --watch",
    "webpack:client:production": "webpack --mode production --config config/webpack/production.babel.js --colors --progress",
    "webpack:mask": "grep -v  \"\\[built\\]\" | grep -v icons-",
    "webpack:server:dev": "webpack --mode development --config config/webpack/server.babel.js --colors --progress --watch",
    "webpack:server:production": "webpack --mode production --config config/webpack/server.babel.js --colors --progress"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-do-expressions": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-function-bind": "^7.10.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-destructuring": "^7.10.4",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/register": "^7.10.5",
    "autoprefixer": "^9.8.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-static-fs": "^3.0.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "babel-preset-minify": "^0.5.1",
    "circular-dependency-plugin": "^5.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^4.0.0",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^3.6.0",
    "css-module-flow": "^1.0.0",
    "css-modules-flow-types-loader": "^1.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-standard": "^4.0.1",
    "favicons-webpack-plugin": "^3.0.1",
    "feathers-localstorage": "^5.1.1",
    "flow-bin": "^0.129.0",
    "html-webpack-plugin": "^4.3.0",
    "lerna": "^3.22.1",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^8.0.1",
    "ms.macro": "^2.0.0",
    "node-sass": "^4.14.1",
    "node-sass-import-once": "^1.2.0",
    "nodemon": "soulofmischief/nodemon",
    "nodemon-webpack-plugin": "^4.3.2",
    "offline-plugin": "^5.0.7",
    "postcss-loader": "^3.0.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "rxjs": "^6.6.0",
    "sass-loader": "^9.0.2",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "style-loader": "^1.2.1",
    "stylelint": "^15.10.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-node-externals": "^2.5.0",
    "webpack-pwa-manifest": "^4.2.0",
    "webpack-subresource-integrity": "^1.4.1",
    "yarn": "^1.22.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "flow-typed"
    ]
  }
}
